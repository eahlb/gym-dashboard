{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "Gym dashboard",
    "description": ""
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "tags": [],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/workout/": {
      "post": {
        "tags": [
          "Workout"
        ],
        "description": "Create a new workout",
        "parameters": [
          {
            "name": "New workout",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/workout"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "get": {
        "tags": [
          "Workout"
        ],
        "description": "Get all workouts",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/workout/{id}": {
      "get": {
        "tags": [
          "Workout"
        ],
        "description": "Get a workout",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "Workout"
        ],
        "description": "Update a workout",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Updated workout",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/workout"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/program": {
      "post": {
        "tags": [
          "Program"
        ],
        "description": "Create a chain of workouts.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/program"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Program"
        ],
        "description": "Get all programs.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "workout": {
      "type": "object",
      "properties": {
        "workoutName": {
          "type": "string",
          "example": "Test workout"
        },
        "status": {
          "type": "string",
          "example": "PENDING"
        },
        "excercises": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "excerciseName": {
                "type": "string",
                "example": "Test exercise"
              },
              "sets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "reps": {
                      "type": "string",
                      "example": "10"
                    },
                    "load": {
                      "type": "string",
                      "example": "100 kg"
                    }
                  },
                  "required": [
                    "reps",
                    "load"
                  ]
                }
              }
            },
            "required": [
              "excerciseName",
              "sets"
            ]
          }
        }
      },
      "required": [
        "workoutName",
        "status",
        "excercises"
      ]
    },
    "program": {
      "type": "object",
      "properties": {
        "programName": {
          "type": "string",
          "example": "Test program"
        },
        "input": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "1RM"
              },
              "value": {
                "type": "string",
                "example": "100 kg"
              }
            },
            "required": [
              "name",
              "value"
            ]
          }
        },
        "workouts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "workoutName": {
                "type": "string",
                "example": "Week 1, Workout 1"
              },
              "excercises": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "excerciseName": {
                      "type": "string",
                      "example": "BP"
                    },
                    "sets": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "reps": {
                            "type": "string",
                            "example": "5"
                          },
                          "load": {
                            "type": "string",
                            "example": "75% * %1RM%"
                          }
                        },
                        "required": [
                          "reps",
                          "load"
                        ]
                      }
                    }
                  },
                  "required": [
                    "excerciseName",
                    "sets"
                  ]
                }
              }
            },
            "required": [
              "workoutName",
              "excercises"
            ]
          }
        }
      },
      "required": [
        "programName",
        "input",
        "workouts"
      ]
    }
  }
}